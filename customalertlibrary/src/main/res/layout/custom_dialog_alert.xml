<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTranslucent"
    android:foregroundGravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvContentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorBrightRed"
        android:paddingBottom="@dimen/margin_12"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_12"
        android:text="title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_20" />

    <!--<TextView
        android:id="@+id/tvContentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:maxWidth="@dimen/margin_250"
        android:minWidth="@dimen/margin_200"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_10"
        android:text="Body"
        android:textSize="@dimen/textsize_15" />-->

    <include layout="@layout/content_dialog_body"/>

    <LinearLayout
        android:id="@+id/llLowerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_20">

        <TextView
            android:id="@+id/tvContentDecline"
            style="@style/StyleDecline"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/tvContentAccept"
            style="@style/StyleAccept"
            android:textColor="@color/colorBrightRed" />
    </LinearLayout>
</LinearLayout>